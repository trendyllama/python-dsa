{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "format",
      "type": "shell",
      "command": "uv run ruff format",
      "group": "build"
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "uv run ruff check",
      "group": "build"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "uv run pytest",
      "group": "test"
    },
    {
      "label": "lint and fix",
      "type": "shell",
      "command": "uv run ruff check --fix",
      "dependsOn": ["format", "lint"],
      "group": "build"


    },
    {
      "label": "main workflow",
      "dependsOn": ["format", "lint", "test"],
      "group": {
        "kind": "build",
      }
    }
  ]
}
